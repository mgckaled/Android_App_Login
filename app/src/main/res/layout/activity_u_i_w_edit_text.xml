<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.Main.uiwidgets.Activity_uIWEditText">

  <EditText
    android:id="@+id/etEditText"
    android:layout_width="329dp"
    android:layout_height="59dp"
    android:layout_marginStart="41dp"
    android:layout_marginEnd="42dp"
    android:ems="10"
    android:hint="Digite algo neste campo"
    android:inputType="text"
    app:layout_constraintBottom_toTopOf="@+id/btnEditText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <Button
    android:id="@+id/btnEditText"
    android:layout_width="305dp"
    android:layout_height="56dp"
    android:text="Mostrar Texto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/etEditText"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="@+id/etEditText"
    app:layout_constraintTop_toBottomOf="@+id/etEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>