<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.Login.CadastroActivity">

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_cadastro" />

  <EditText
    android:id="@+id/cad_editNome"
    android:layout_width="295dp"
    android:layout_height="50dp"
    android:ems="10"
    android:hint="Nome Completo"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toTopOf="@+id/cad_editEmail"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView"
    app:layout_constraintVertical_chainStyle="packed" />

  <EditText
    android:id="@+id/cad_editEmail"
    android:layout_width="295dp"
    android:layout_height="50dp"
    android:ems="10"
    android:hint="E-mail"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toTopOf="@+id/cad_editSenha"
    app:layout_constraintEnd_toEndOf="@+id/cad_editNome"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="@+id/cad_editNome"
    app:layout_constraintTop_toBottomOf="@+id/cad_editNome" />

  <EditText
    android:id="@+id/cad_editSenha"
    android:layout_width="295dp"
    android:layout_height="50dp"
    android:ems="10"
    android:hint="Senha"
    android:inputType="textPassword"
    app:layout_constraintBottom_toTopOf="@+id/cad_button"
    app:layout_constraintEnd_toEndOf="@+id/cad_editEmail"
    app:layout_constraintStart_toStartOf="@+id/cad_editEmail"
    app:layout_constraintTop_toBottomOf="@+id/cad_editEmail" />

  <Button
    android:id="@+id/cad_button"
    android:layout_width="295dp"
    android:layout_height="50dp"
    android:text="Cadastrar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/cad_editSenha"
    app:layout_constraintStart_toStartOf="@+id/cad_editSenha"
    app:layout_constraintTop_toBottomOf="@+id/cad_editSenha" />

</androidx.constraintlayout.widget.ConstraintLayout>